{
  "name": "web",
  "version": "0.1.0",
  "description": "离线 AI 报告排版桌面应用，支持将 Markdown 转换为 Word 文档",
  "author": "Xyu <hitxyshan@163.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/BeiZi6/Proj1.git"
  },
  "private": true,
  "main": "electron/main.mjs",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test:electron": "node --test electron/__tests__/*.test.mjs",
    "dev:desktop:web": "npm run dev",
    "dev:desktop:api": "node electron/scripts/run-python.mjs ../api/desktop_backend.py",
    "dev:desktop:electron": "wait-on tcp:3000 tcp:8000 && electron .",
    "dev:desktop": "concurrently -k -n web,api,electron \"npm run dev:desktop:web\" \"npm run dev:desktop:api\" \"npm run dev:desktop:electron\"",
    "build:backend": "node electron/scripts/run-python.mjs ../api/scripts/build_desktop_backend.py",
    "build:desktop": "npm run build:backend && npm run build && electron-builder",
    "pack:desktop": "npm run build:backend && npm run build && electron-builder --dir",
    "release:desktop": "npm run build:backend && npm run build && electron-builder --publish always"
  },
  "dependencies": {
    "framer-motion": "^12.30.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@playwright/test": "^1.58.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.proj1.reportformatter",
    "productName": "AI Report Formatter",
    "icon": "electron/assets/icons/icon.png",
    "afterSign": "electron/scripts/notarize.cjs",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "electron/backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "publish": [
      {
        "provider": "github"
      }
    ],
    "mac": {
      "icon": "electron/assets/icons/icon.icns",
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.plist"
    },
    "win": {
      "icon": "electron/assets/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "electron/assets/icons/icon.png",
      "target": [
        "AppImage"
      ]
    }
  }
}
